{
  "name": "react-app-typescript-express-socket-io-skeleton",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-force-ssl": "^0.3.2",
    "global": "^4.4.0",
    "pm2": "^4.5.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "socket.io": "^3.0.4",
    "socket.io-client": "^3.0.4",
    "tsc": "^1.20150623.0",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "buildApp": "react-scripts build",
    "cleanApp": "rm -rf build",
    "buildServer": "tsc server/sockets/socketServer.ts --outDir bin/sockets && tsc server/routes/customRoutes.ts --outDir bin/routes && tsc server/src/requiredRoutes.ts server/src/server.ts --outDir bin/src",
    "cleanServer": "rm -rf bin",
    "buildAll": "yarn buildApp && yarn buildServer",
    "cleanAll": "yarn cleanApp && yarn cleanServer",
    "cleanBuild": "yarn cleanAll && yarn buildAll",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "production": "pm2 start process.json"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
